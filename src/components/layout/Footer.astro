---
import { footerLinks, siteConfig } from "@/site.config";
import { Icon } from "astro-icon/components";

const year = new Date().getFullYear();
---


<footer
	class="mt-auto flex w-full flex-col items-center justify-center gap-y-2 pb-4 pt-8 text-center align-top text-accent sm:flex-row sm:justify-between sm:text-sm"
>
	<div class="me-0 sm:me-4">
		<span class="text-xs">&copy;</span> {year} {siteConfig.author}
	</div>
	<nav
		aria-label="More on this site"
		class="flex justify-between gap-x-2 gap-y-2 flex-wrap font-semibold text-light"
	>
		{
			footerLinks.map((link) => (
				<a class="underline-offset-2 hover:text-accent hover:underline" href={link.path}>
					{link.icon ?
						<Icon aria-hidden="true" class="h-6 w-6" focusable="false" name={link.icon} />
						: link.title
					}
				</a>
			))
		}
	</nav>
</footer>
