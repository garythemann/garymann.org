---
import { footerLinks, siteConfig } from "@/site.config";
import { Icon } from "astro-icon/components";

const year = new Date().getFullYear();
---

<footer
	class="mt-auto flex w-full flex-col items-center justify-center gap-y-4 pb-4 pt-8 text-center align-top text-accent sm:flex-row sm:justify-between sm:text-sm"
>
	<div class="me-0 sm:me-4">
		<span class="text-xs">&copy;</span>
		{year}
		{siteConfig.author}
	</div>
	{
		footerLinks.map((linkGroup) => (
			<nav
				aria-label="More on this site"
				class="flex flex-wrap items-center justify-between gap-x-2 gap-y-2 text-light"
				class:list={[linkGroup.className]}
			>
				{linkGroup.links.map((link) => (
					<a class="underline-offset-2 hover:text-accent hover:underline" href={link.href}>
						{link.icon ? (
							<Icon
								aria-hidden="true"
								class="h-6 w-6"
								focusable="false"
								title={link.title}
								name={link.icon}
							/>
						) : (
							link.title
						)}
					</a>
				))}
			</nav>
		))
	}
</footer>
